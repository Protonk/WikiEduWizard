ci-font-size = 18px
ci-checkbox-height = auto //65px
ci-line-height = 21px //ci-checkbox-height
ci-checkbox-border-color = rgba(78,88,127,0.2)
ci-checkbox-background-active = rgba(105,114,148,1.0)
ci-font-color-active = white
ci-font-color-inactive = rgba(255,255,255,0.1)
ci-padding = 20px 45px




.custom-input--checkbox, .custom-input--radio
  position relative
  display block
  width 100%
  height ci-checkbox-height
  line-height ci-checkbox-height
  color ci-font-color-active
  border-top 1px solid ci-checkbox-border-color
  border-bottom 1px solid ci-checkbox-border-color
  font-size ci-font-size
  padding ci-padding
  
  
  label
    cursor pointer
  
  input
    display none
    cursor pointer
  

  .check-button
    transition 0.12s all
    content ''
    display block
    position absolute
    top 50%
    margin-top -8px
    right 45px
    width 18px
    height 18px
    border 2px solid white
    background-color transparent
    box-sizing border-box
    cursor pointer


      

  
.custom-input-radio-inner
  border-top 1px solid ci-checkbox-border-color
  
  .custom-input--radio
    border 1px solid ci-checkbox-border-color
    
    &:last-child
      border-bottom 2px solid ci-checkbox-border-color
  


  
.custom-input-wrapper
  position relative
  width auto
  height auto
  
  &.checked 
    .custom-input--checkbox
      .check-button
        background-color white

      


  &.has-info
    cursor pointer
    
    *
      cursor pointer
      
    &:before
      content ''
      position absolute
      top 0
      left 100%
      display block
      width 25px
      height 100%
      background transparent url('/images/tooltip-arrow--right.svg') no-repeat top left
      background-size auto 100%
      z-index 10
      background-position-x -25px
      
    &.selected
      overflow-x visible


      .custom-input--checkbox
        background ci-checkbox-background-active
        border-color rgba(78,88,127,0)
        
      &:before
        background-position-x -1px
      

.custom-input-dates
  position relative
  width 100%
  height 45px
  margin 60px auto
  
  &__inner
    display inline-block
    width auto
    height 45px
    
    &.from 
      float left
      text-align left
    &.to 
      float right
      text-align right
    
  
  span.dates-to
    font-size 18px
    display inline-block
    vertical-align middle
    position absolute
    width 35px
    height 100%
    line-height 45px
    position absolute
    top 50%
    left 50%
    margin-left -15px
    text-align center
    
    
  .custom-select
    display inline-block
    width: 52px
    height: 40px
    overflow hidden
    background: transparent url(/images/arrow--dropdown.svg) no-repeat right 
    border-bottom 1px solid blue-dark
    margin 0 4px
    
    select 
      background transparent
      width 52px
      font-size 18px
      line-height 40px
      border none
      border-radius 0
      height 40px
      -webkit-appearance none
      appearance none
      outline none
      color blue-dark
      text-align center
      cursor pointer
      padding-left 8px
    
    &--year
      width 72px
      
      select
        width 72px
        padding-left 6px






















