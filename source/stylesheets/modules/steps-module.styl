/* Steps Module
--------------------------------------------- */
.steps 
  width 100%

/* Step Module
--------------------------------------------- */


.step
  cf()


.step-form
  position absolute
  width 460px
  height 100%
  top 0
  left 0
  padding 80px 45px 80px 45px
  background blue
  color white
  z-index 2

  &__title
    margin-bottom 30px
    
  &__subtitle
    font-family body-font
    font-size 18px
    line-height 21px
    color blue-dark
    letter-spacing 1.29px
    margin 0 auto 10px
    
  &-inner
    position relative

.step-info
  position absolute
  width 100%
  min-width 600px
  max-width 700px
  height 100%
  top 0
  right 0
  padding 170px 40px 40px 0
  color body-font-color
  background white
  z-index 1
  
  p 
    margin 25px auto
  

  .main-logo
    position absolute
    display inline-block
    top 90px
    right 40px
    z-index 5
    
  .step-info-inner
    margin-top 30px

    
    
    

    
    
    
    