/* Steps Module
--------------------------------------------- */
.steps 
  width 100%
  height 100%

/* Step Module
--------------------------------------------- */


.step
  cf()
  width 100%
  height 100%


//STEP FORM SECTION

.step-form
  position absolute
  width 460px
  height 100%
  top 0
  left 0
  padding 80px 0 80px 0
  background blue
  color white
  z-index 2


  &__title
    margin-bottom 30px
    

  &__subtitle
    font-family body-font
    font-size 18px
    line-height 21px
    color blue-dark
    letter-spacing 1.29px
    margin 0 auto 10px
    


.step-form-inner
  position relative
  


.step-form-header
  padding 0 45px


//STEP INFO SECTION

.step-info
  position relative
  width auto
  max-width 1200px
  min-width 1100px
  height 100%
  padding 170px 40px 40px 500px
  color body-font-color
  background white
  z-index 1
  
  p 
    margin 25px auto
    &:first-child
      margin-top 0
    &:last-child
      margin-bottom 0


  .main-logo
    position absolute
    display inline-block
    top 90px
    right 40px
    z-index 1000
    

  .step-info-inner
    margin-top 30px
    max-width 700px
  

  .step-info-tip
    transition opacity 0.33s 
    display block
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    z-index 500
    opacity 0
    

    &__inner
      @extend .step-info
      background white
    

    &.visible
      opacity 1
    
    
    
    

    
    
    
    