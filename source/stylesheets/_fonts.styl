/* /////////////////////////////////////////////////////

FONT DECLARATIONS

///////////////////////////////////////////////////// */

/* 
  Body Content
*/

.body-content
  font-size 16px
  line-height 1.5625
  letter-spacing 0.05px
  
  +below-height(heightBreak)
    font-size 14px
  
  &--large 
    font-size 18px
    line-height 1.555
    letter-spacing 0.06px
    
    +below-height(heightBreak)
      font-size 16px
    


.list-content
  font-size 14px
  line-height 2.142
  letter-spacing 0.5px
  
  +below-height(heightBreak)
    font-size 12px
    
  
.form-content
  font-family body-font
  font-size 18px
  line-height 1.166666
  letter-spacing 1.29px
  
  +below-height(heightBreak)
    font-size 16px
  
  &--small 
    font-size 14px
    line-height 1.143
    letter-spacing 0.78px
    
    +below-height(heightBreak)
      font-size 12px
      


/* 
  Headings
*/

.large-heading
  font-size 36px
  line-height 1.194
  letter-spacing 0.45px
  
  +below-height(heightBreak)
    font-size 32px


.medium-heading
  font-size 24px
  line-height 1.1666
  letter-spacing 0.38px
  
  +below-height(heightBreak)
    font-size 22px
  


.small-heading
  font-size 18px
  line-height 1.6667
  letter-spacing 1px
  
  +below-height(heightBreak)
    font-size 16px
  

  

.font-blue
  color blue
  &--light
    color blue-light 
  &--lightest 
    color blue-lightest 
  &--dark
    color blue-dark 
  
.font-red
  color red
  &--light
    color red-light 
  &--lightest 
    color red-lightest 
  &--dark
    color red-dark 

.font-yellow
  color yellow
  &--light
    color yellow-light 
  &--lightest 
    color yellow-lightest 
  &--dark
    color yellow-dark 
    
.font-green
  color green
  &--light
    color green-light 
  &--lightest 
    color green-lightest 
  &--dark
    color green-dark 
  